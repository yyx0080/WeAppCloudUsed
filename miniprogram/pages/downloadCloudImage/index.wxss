/* pages/downloadCloudImage/index.wxss */
.container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx;
}

.image-item {
  width: 45%;
  margin-bottom: 20rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  cursor: pointer;
}

.download-btn {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background-color: #4CAF50;
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  font-size: 12rpx;
  cursor: pointer;
}
